        <GiftCard Image="img/Image-13@2x.png" Title="Choice Gift Card" SubTitle="0.1% Investment"></GiftCard>
        <GiftCard Image="img/Image-14@2x.png" Title="Ebay Gift Card" SubTitle="9% Investment"></GiftCard>
        <GiftCard Image="img/Image-15@2x.png" Title="Xbox Gift Card" SubTitle="9% Investment"></GiftCard>
