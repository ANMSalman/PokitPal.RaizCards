        <GiftCard Image="img/Image-7@2x.png" Title="Iconic Gift Card" SubTitle="9% Investment"></GiftCard>
        <GiftCard Image="img/Image-9@2x.png" Title="UberEats Gift Card" SubTitle="9% Investment"></GiftCard>
