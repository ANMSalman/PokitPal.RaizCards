@inherits LayoutComponentBase

<MudLayout>
    <MudHidden Breakpoint="Breakpoint.Xs">
        <MudAppBar Style="background-color: black;" Elevation="1" Class="pl-10">
            <a href="index"><img class="ml-10" src="img/logo.png" /></a>
        </MudAppBar>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.SmAndUp">
        <MudAppBar Style="background-color: black;" Elevation="1">
            <a href="index" class="mx-auto"><img  src="img/logo.png" /></a>
        </MudAppBar>
    </MudHidden>
    <MudMainContent>
        <div class="page-container">
            <div class="content-wrap">
                @Body
                <MudScrollToTop>
                    <MudFab Color="Color.Tertiary" Icon="@Icons.Filled.ArrowUpward"/>
                </MudScrollToTop>
            </div>
        </div>
        <div Style="background-color: black;" class="mt-10 px-10 py-10 footer">
            <MudGrid>
                <MudItem xs="12" sm="4" md="2" Class="d-flex justify-center">
                    <img src="img/logo.png"/>
                </MudItem>
                <MudItem xs="12" sm="8" md="10">
                    <div style="text-align: center">
                        <MudLink Color="Color.Primary">Help & FAQ</MudLink>
                        <MudLink Color="Color.Primary" Class="ml-6">Terms and Condition</MudLink>
                        <MudLink Color="Color.Primary" Class="ml-6">Privacy Policy</MudLink>
                    </div>
                </MudItem>
            </MudGrid>
        </div>
    </MudMainContent>
</MudLayout>